<resources>
    <!-- Base application theme. -->
    <style name="Theme.Todo" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="android:fontFamily">@font/noto_sans_jp</item>
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryVariant">@color/primaryDarkColor</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondaryColor</item>
        <item name="colorSecondaryVariant">@color/secondaryDarkColor</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- My app theme -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:navigationBarColor">?attr/colorPrimary</item>
        <item name="bottomSheetDialogTheme">@style/BotSheetDialogTheme</item>
        <item name="actionOverflowButtonStyle">@style/OverflowButton</item>
        <item name="android:actionMenuTextAppearance">@style/ActionMenuTextAppearance</item>

        <item name="textAppearanceButton">@style/TextAppearance.MdcTypographyStyles.Button</item>
        <item name="textAppearanceTitleSmall">@style/TextAppearance.MdcTypographyStyles.Headline5
        </item>
        <item name="textAppearanceTitleMedium">@style/TextAppearance.MdcTypographyStyles.Headline5
        </item>
        <item name="textAppearanceTitleLarge">@style/TextAppearance.MdcTypographyStyles.Headline5
        </item>
    </style>

    <style name="BotSheetDialogTheme" parent="ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BotSheetTheme</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:navigationBarColor">?attr/colorSurface</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>

    <style name="BotSheetTheme" parent="Widget.MaterialComponents.BottomSheet">
        <item name="shapeAppearanceOverlay">@style/BotSheetShape</item>
    </style>

    <style name="BotSheetShape" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">16dp</item>
        <item name="cornerSizeTopRight">16dp</item>
    </style>

    <style name="BotSheetTheme2" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="OverflowButton" parent="Widget.AppCompat.Light.ActionButton.Overflow">
        <item name="tint">?attr/colorOnPrimary</item>
    </style>

    <style name="ButtonInsideGridlayout" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:layout_rowWeight">1</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:textAppearance">@style/TextAppearance.MdcTypographyStyles.Caption</item>
    </style>

    <style name="ActionMenuTextAppearance">
        <item name="android:textAppearance">@style/TextAppearance.MdcTypographyStyles.Caption</item>
        <item name="android:textSize">12sp</item>
    </style>
</resources>